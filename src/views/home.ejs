<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Home</title>
        <link rel="stylesheet" href="/css/style.css" />
    </head>
    <style>
        .table-container {
            padding: 15px 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            font-family: Arial, Helvetica, sans-serif;
        }

        th {
            background-color: coral;
            text-align: left;
            padding: 12px;
            border: 1px solid #000000;
            color: white;
        }

        td {
            padding: 8px;
            text-align: left;
            border: 1px solid #000000;
        }

        tr:nth-child(even) {
            background-color: #ffefef;
        }

        tr:hover {
            background-color: #ddd;
        }

        .title {
            margin: 10px auto;
            width: 150px;
            background-color: burlywood;
            text-align: center;
            text-align-last: center;
            font-size: 25px;
            font-weight: 600;
            border-bottom: 2px solid #000000;
        }

        button {
            margin-left: 8px;
            margin-right: 8px;
        }
    </style>
    <body>
        <div class="topnav">
            <a class="active" href="/">Home</a>
            <a href="/register">Register</a>
        </div>
        <div class="table-container">
            <div class="title">List accounts</div>
            <table>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Action</th>
                </tr>
                <% for(account of listAccounts) { %>
                <tr>
                    <td><%= account.id %></td>
                    <td><%= account.username %></td>
                    <td><%= account.password %></td>
                    <td>
                        <button
                            onclick="window.location = '/edit/<%=account.id%>'"
                        >
                            Edit
                        </button>
                        <button
                            onclick="window.location = '/delete/<%=account.id%>'"
                        >
                            Delele
                        </button>
                    </td>
                </tr>
                <% } %>
            </table>
        </div>
    </body>
</html>
